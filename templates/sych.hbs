                    </a>
                    {{/each}}
                </div>

                {{!-- <div id="s-nav-heading">
                    <b>Meta</b>
                </div> --}}
            </div>
            <div class="col-9" id="pill-content">
                <div class="tab-content" id="v-pills-tabContent">
                    {{#each contents}}
                    <div class="tab-pane {{this.2}}" id="{{this.1}}" role="tabpanel" aria-labelledby="{{this.1}}-tab">
                        {{{this.0}}}
                    </div>
                    {{/each}}
                </div>
            </div>
        </div>
